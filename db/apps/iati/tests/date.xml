<?xml version="1.0" encoding="UTF-8"?>
<TestSet>
    <testName>date tests for IATI</testName>
    <description>
        This tests the functionality of the datemodule - 
    </description>
    <author>Chris Wallace</author>
    <prolog>
        import module namespace date = "http://kitwallace.me/date" at "/db/lib/date.xqm";
    </prolog>
    <test output="text">
        <task>date to RFC-822</task>
        <code>
            date:datetime-to-RFC-822("2012-05-01T12:30:01")
        </code>
        <expected>Tue, 01 May 2012 12:30:1 UTC</expected>
    </test>
    <test output="text">
        <task>RFC-822 to date</task>
        <code>
           date:RFC-822-to-date("Tue, 01 May 2012 12:30:01 UTC")
        </code>
        <expected>2012-05-01</expected>
    </test>
    <test output="text">
        <task>identity</task>
        <code>
            current-date() = date:RFC-822-to-date(date:datetime-to-RFC-822(current-date()))
        </code>
        <expected>true</expected>
    </test>
</TestSet>